<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.prediction"
    android:background="@color/backgroundBlue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_wave"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@mipmap/ic_polsri_foreground"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/polsri" />
        <View
            android:id="@+id/garis"
            android:layout_width="3dp"
            android:layout_height="120sp"
            android:background="@color/white"
            android:layout_toRightOf="@id/logo"
            />

        <TextView
            android:id="@+id/App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/garis"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagLine"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/App"
            android:layout_toRightOf="@id/garis"
            android:layout_marginLeft="10dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo">

            <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Mulai Pembudidayaan"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Mulai Pembudidayaan"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <Button
                            android:id="@+id/btnTanggalPembudidayaan"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="30dp"
                            android:text="+"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/tvTanggalPembudidayaan"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Produk Terjual"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <Button
                            android:id="@+id/btnTanggalTerjual"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="30dp"
                            android:text="+"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/tvTanggalTerjual"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Selisih Hari"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>

                        <TextView
                            android:id="@+id/tvSelisihHari"
                            android:layout_marginLeft="30dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/gray"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Biaya Pembudidayaan"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Pakan (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaPakan"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Tenaga Kerja (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaTenagaKerja"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Pembibitan (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaPembibitan"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Perawatan (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaPerawatan"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Overhead (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaOverhead"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Utilitas (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaUtilitas"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Distribusi dan Pemasaran (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etBiayaDistribusiPerawatan"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/gray"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendapatan"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Panen (Kg)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etJumlahPanen"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Harga Jual Produk (Rp)"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/blue"/>
                        <EditText
                            android:id="@+id/etHargaJualProduk"
                            android:layout_marginLeft="40dp"
                            android:layout_width="match_parent"
                            android:paddingRight="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/blue"
                            android:backgroundTint="@color/blue"
                            android:inputType="numberDecimal"
                            android:text="0"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="center">

                <Button
                    android:id="@+id/hitung"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Hitung"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </GridLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>